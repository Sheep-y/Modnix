<Window x:Class="Sheepy.Modnix.MainGUI.SetupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sheepy.Modnix.MainGUI"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Modnix Setup" Height="280" Width="550" Activated="Window_Activated">
   <DockPanel>
      <Button x:Name="ButtonAction" VerticalAlignment="Top" DockPanel.Dock="Bottom" HorizontalAlignment="Center" Margin="10" FontSize="24" Padding="10,5" IsEnabled="False" MinWidth="150" Click="ButtonAction_Click">
         <AccessText x:Name="AccessAction">Loading...</AccessText>
      </Button>
      <TextBox x:Name="TextMessage" DockPanel.Dock="Top" Margin="20,10,20,0" FontSize="24" HorizontalContentAlignment="Center" Text="Modnix" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" TextWrapping="Wrap" MouseDoubleClick="TextMessage_MouseDoubleClick"/>
   </DockPanel>
</Window>
